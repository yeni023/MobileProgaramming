<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="열람실 예약"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/library_icon1"/>

        <TextView
            android:id="@+id/tvlibrary1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="열람실 예약 이용 안내서"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlibrary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="열람실 예약 전 알아둘 사항"
            android:textColor="#ffb746"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/library_icon2" />

        <TextView
            android:id="@+id/tvlibrary3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일반열람실 / 노트북열람실 / 그룹스터디룸"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlibrary4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지에서 QR코드로 좌석 인증 해주세요"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlibrary5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="좌석 배정 후 4시간 동안 사용 가능하며,"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvlibrary6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연장을 원할 시 연장 버튼을 눌러주세요"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/tvlibrary7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="열람실 내 음료 반입은 금지합니다"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/btnStart_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>