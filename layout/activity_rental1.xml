<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_rental1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="물품 대여"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rental_help_icon"/>

        <TextView
            android:id="@+id/tvlocker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="물품 대여 이용 안내서"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="물품 대여 전 알아둘 사항"
            android:textColor="#ffb746"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/tvlocker4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 본인 소속 학과 내 물품만 대여 가능합니다"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="#ff0000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvlocker5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 물품 반납 기한"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvlocker6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우산 : 3일이내"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이외 모든 물품 : 당일 오후 9시까지"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 연체 시 패널티 (1년 단위 리셋)"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1주일 미만 연체 : 1회 패널티·한달간 물품 대여 불가"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1주일 이상 연체 : 2회 패널티·한달간 물품 대여 불가"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="패널티 3회 누적시 : 1년간 물품 대여 불가"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 4. 분실 및 파손 책임"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 본인에게 물품의 100% 보상 청구"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btnStart_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>