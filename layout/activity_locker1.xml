<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_locker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="사물함 대여"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/locker_icon1"/>

        <TextView
            android:id="@+id/tvlocker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사물함 대여 이용 안내서"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사물함 대여 전 알아둘 사항"
            android:textColor="#ffb746"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/locker_icon2" />

        <TextView
            android:id="@+id/tvlocker3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개인 사물함"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1인이 1개의 사물함을 사용합니다"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvlocker5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최대 1학기 동안 대여할 수 있습니다"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvlocker6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연체 시 연체되는 일 수만큼 패널티가 부과됩니다"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnStart_locker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>