<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="식당 예약"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurant_icon1"/>

        <TextView
            android:id="@+id/tvrestaurant_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식당 예약 이용 안내서"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식당 예약 전 알아둘 사항"
            android:textColor="#ffb746"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurant_icon2" />

        <TextView
            android:id="@+id/tvlocker3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="혼밥존 / 일반존"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식사 소요 시간 내 음식을 다 먹지 못했다면"
            android:textSize="20sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="130dp"
                android:layout_height="26dp"
                android:src="@drawable/restaurant_extend_img"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="88dp"/>

            <TextView
                android:id="@+id/tvlocker5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="을 눌러주세요"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:src="@drawable/restaurant_extend_img"
                android:layout_marginTop="4dp"
                android:layout_marginRight="-15dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/tvlocker6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="를 누르지 않을 시,"
                android:textColor="#ff0000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvlocker7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소요 시간 종료 5분 후 좌석이 반납 처리 됩니다"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvlocker8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원활한 회전을 위해"
            android:textSize="20sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvlocker9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="음식을 다 먹고"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:src="@drawable/restaurant_exit_img"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="를 눌러주세요"
                android:textSize="20sp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnStart_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>